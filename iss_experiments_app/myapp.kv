# myapp.kv

<CircularButton>:
    # No text assigned
    canvas.before:
        Color:
            rgba: 0, 0, 1, 1  # Blue color
        Ellipse:
            pos: self.pos
            size: self.size

<DashboardScreen>:
    name: 'dashboard'
    FloatLayout:
        #Optional: Remove or comment out the Image widget if you don't want a background image
        Image:
            source: 'assets/images/transparent_ISS.png'
            allow_stretch: True
            keep_ratio: True
            size_hint: (1, 1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            padding: dp(100)  # Adds padding around the image

        # Main Content
        BoxLayout:
            orientation: 'vertical'
            spacing: dp(10)
            padding: dp(20)
            size_hint: (1, 1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            Label:
                text: "Dashboard"
                font_size: '24sp'
                size_hint_y: None
                height: dp(50)
                color: 1, 1, 1, 1  # White text
                halign: 'center'
                valign: 'middle'
                text_size: self.width, None

            DashboardRecycleView:
                id: dashboard_recycleview
                viewclass: 'CircularButton'
                do_scroll_y: True
                do_scroll_x: False

                RecycleGridLayout:
                    cols: 4
                    default_size: dp(60), dp(60)  # Increased size for better visibility
                    default_size_hint: None, None
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: dp(20)  # Increased spacing for better layout
                    padding: dp(20)

            # Search Results Display
            ScrollView:
                id: search_results_scroll
                size_hint: (1, 0.3)
                do_scroll_x: False

                Label:
                    id: search_results_label
                    text: ""
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width, None
                    halign: 'left'
                    valign: 'top'
                    color: 1, 1, 1, 1  # White text
                    markup: True  # Enable markup for text formatting

        # Bottom Navigation Bar
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, None)
            height: dp(60)
            padding: dp(10)
            spacing: dp(10)
            pos_hint: {'x': 0, 'y': 0}  # Positioned at the bottom

            Button:
                text: "Home"
                size_hint: (None, 1)
                width: dp(100)
                on_release:
                    app.root.current = 'home'

            Button:
                text: "Adventure"
                size_hint: (None, 1)
                width: dp(100)
                on_release:
                    app.root.current = 'adventure'


<HomeScreen>:
    name: 'home'
    FloatLayout:
        # Black Background
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1  # Black color
            Rectangle:
                pos: self.pos
                size: self.size

        # Main Content
        BoxLayout:
            orientation: 'vertical'
            spacing: dp(10)
            padding: dp(20)
            size_hint: (1, 1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            Label:
                text: "Home"
                font_size: '24sp'
                size_hint_y: None
                height: dp(50)
                color: 1, 1, 1, 1  # White text
                halign: 'center'
                valign: 'middle'
                text_size: self.width, None

            Button:
                text: "Go to Dashboard"
                size_hint: (None, None)
                size: (dp(200), dp(50))
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_release:
                    app.root.current = 'dashboard'
                background_color: 0.2, 0.6, 0.86, 1  # Button color
                color: 1, 1, 1, 1  # Text color

<AdventureScreen>:
    name: 'adventure'
    FloatLayout:
        # Black Background
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1  # Black color
            Rectangle:
                pos: self.pos
                size: self.size

        # Main Content Layout
        BoxLayout:
            orientation: 'horizontal'
            spacing: dp(20)
            padding: dp(20)
            size_hint: (1, 1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            # Left Side: Text and Controls
            BoxLayout:
                orientation: 'vertical'
                spacing: dp(20)
                size_hint: (0.6, 1)

                # Header with Back Button, Title, and Difficulty Toggle
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: dp(50)
                    spacing: dp(10)
                    padding: dp(10)

                    Button:
                        text: "< Back"
                        size_hint_x: None
                        width: dp(100)
                        on_release: root.go_back_to_dashboard()
                        background_normal: ''  # Removes default background
                        background_color: 0, 0, 0, 0  # Transparent background
                        color: 1, 1, 1, 1  # Text color

                    Label:
                        text: "Adventure"
                        font_size: '24sp'
                        color: 1, 1, 1, 1  # White text
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.width, None

                    # Difficulty Toggle
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint_x: None
                        width: dp(150)
                        spacing: dp(10)
                        padding: dp(5)

                        Label:
                            text: "Difficulty:"
                            color: 1, 1, 1, 1  # White text
                            size_hint_x: None
                            width: dp(80)

                        ToggleButton:
                            id: difficulty_toggle
                            text: "Medium"
                            state: 'normal'
                            size_hint_x: None
                            width: dp(70)
                            on_state: root.toggle_difficulty(self, self.state == 'down')

                ScrollView:
                    do_scroll_x: False
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: dp(10)

                        Label:
                            id: adventure_story
                            text: root.story
                            size_hint_y: None
                            height: self.texture_size[1]
                            text_size: self.width, None
                            halign: 'left'
                            valign: 'top'
                            color: 1, 1, 1, 1  # White text
                            markup: True  # Enable markup for color coding

                BoxLayout:
                    size_hint_y: None
                    height: dp(50)
                    spacing: dp(10)

                    TextInput:
                        id: adventure_input
                        hint_text: "Type your action here..."
                        size_hint: (1, 1)
                        multiline: False

                    Button:
                        id: submit_button
                        text: "Submit"
                        on_release: root.process_adventure_action()
                        background_color: 0.2, 0.6, 0.86, 1  # Button color
                        color: 1, 1, 1, 1  # Text color

            # Right Side: Image Display and Voice Button
            BoxLayout:
                orientation: 'vertical'
                size_hint: (0.4, 1)
                spacing: dp(10)

                Image:
                    id: adventure_image
                    source: "assets/images/default.png"
                    allow_stretch: True
                    keep_ratio: True

                Button:
                    id: play_audio_button
                    text: "Play Audio"
                    size_hint: (1, None)
                    height: dp(50)
                    on_release: root.play_audio()
                    background_color: 0.2, 0.6, 0.86, 1  # Button color
                    color: 1, 1, 1, 1  # Text color

