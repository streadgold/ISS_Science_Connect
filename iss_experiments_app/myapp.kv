                    text: root.options[1]
                    on_release: root.check_answer(self.text)
                    background_color: 0.2, 0.6, 0.86, 1
                    color: 1, 1, 1, 1

                Button:
                    text: root.options[2]
                    on_release: root.check_answer(self.text)
                    background_color: 0.2, 0.6, 0.86, 1
                    color: 1, 1, 1, 1

