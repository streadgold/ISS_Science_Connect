#:kivy 2.3

<MainScreen>:
    FloatLayout:
        # ISS overview image
        canvas.before:
            Rectangle:
                source: 'iss_background.png'
                pos: self.pos
                size: self.size

        # EFU experiment 1 example button
        Button:
            text: "Experiment 1"
            size_hint: 0.2, 0.1
            pos_hint: {"x": 0.3, "y": 0.6}
            on_release:
                app.root.current = "efu1"
                app.root.get_screen("efu1").ids.efu1_label.text = "Details about Experiment 1"

        # EFU experiment 1 example button
        Button:
            text: "Experiment 2"
            size_hint: 0.2, 0.1
            pos_hint: {"x": 0.5, "y": 0.4}
            on_release:
                app.root.current = "efu2"
                app.root.get_screen("efu2").ids.efu2_label.text = "Details about Experiment 2"

        # EFU experiment 3 example button
        Button:
            text: "Experiment 3"
            size_hint: 0.2, 0.1
            pos_hint: {"x": 0.7, "y": 0.2}
            on_release:
                app.root.current = "efu3"
                app.root.get_screen("efu3").ids.efu3_label.text = "Details about Experiment 3"

<EFU1_Screen>:
    BoxLayout:
        orientation: 'vertical'

        Label:
            id: efu1_label
            text: "Payload Info Here"
            font_size: 20

        # return to home screen
        Button:
            text: "Back"
            size_hint_y: None
            height: 50
            on_release: app.root.current = "main"

